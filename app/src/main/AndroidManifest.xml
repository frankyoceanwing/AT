            android:name="HERE_MAP_APP_CODE"
            android:value="7aWDOy8CdYqbD-AXqa9Jbw"/>
        <meta-data
            android:name="GOOGLE_MAP_API_KEY"
            android:value="AIzaSyBc6iEK9pI1kwJAyPvCdS0tpeQZyJU8igQ"/>

    </application>

</manifest>