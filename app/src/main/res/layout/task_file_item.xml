<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:id="@+id/layout_item_root"
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:background="@color/windowBackground"
        >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"/>

        <View
            android:id="@+id/item_divider"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:background="@color/textColorHint"/>

        <TextView
            android:id="@+id/item_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_divider"
            android:layout_alignLeft="@id/item_name"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:singleLine="true"
            android:textColor="@color/white50"
            android:textSize="14sp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/item_modified_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@id/item_size"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_size"
            android:gravity="end|center"
            android:paddingEnd="16dp"
            android:textColor="@color/white50"
            android:textSize="14sp"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>





